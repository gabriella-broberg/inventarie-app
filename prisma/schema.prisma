datasource db {
  provider = "sqlite"  // eller "postgresql" om du anv√§nder PostgreSQL
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
}

model Item {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  quantity    Int
  category    String
}
